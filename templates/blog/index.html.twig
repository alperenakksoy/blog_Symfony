    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ===== 1. Mobile Menu Toggle =====
            const menuToggle = document.getElementById('menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');

            if (menuToggle && mobileMenu) {
                menuToggle.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');

                    // Optional: Update aria-expanded for accessibility
                    const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
                    menuToggle.setAttribute('aria-expanded', !isExpanded);
                });

                // Close menu when clicking outside (optional)
                document.addEventListener('click', function(event) {
                    if (!event.target.closest('#mobile-menu') &&
                        !event.target.closest('#menu-toggle') &&
                        !mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                        menuToggle.setAttribute('aria-expanded', 'false');
                    }
                });
            }

            // ===== 2. Smooth Scrolling =====
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });

            // ===== 3. Newsletter Form =====
            const newsletterForm = document.querySelector('input[type="email"]');
            const subscribeBtn = document.querySelector('input[type="email"] + button');

            if (subscribeBtn && newsletterForm) {
                subscribeBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const email = newsletterForm.value;
                    if (email && email.includes('@')) {
                        alert('Thank you for joining our travel community! (This is a demo - implement with Symfony form handling)');
                        newsletterForm.value = '';
                    } else {
                        alert('Please enter a valid email address');
                    }
                });
            }

            // ===== 4. CTA Button =====
            const ctaButton = Array.from(document.querySelectorAll('button'))
                .find(btn => btn.textContent.includes('Start Exploring'));
            if (ctaButton) {
                ctaButton.addEventListener('click', function() {
                    const target = document.querySelector('#latest-adventures') || document.querySelector('.bg-gray-100.py-16');
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            }
        });
    </script>
