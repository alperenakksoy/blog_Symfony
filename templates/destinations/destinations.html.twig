                    </div>
                </div>

                <!-- Destination 9 -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
                    <div class="relative">
                        <img src="https://images.unsplash.com/photo-1518684079-3c830dcef090?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Patagonia" class="w-full h-64 object-cover">
                        <div class="absolute top-4 left-4">
                            <span class="bg-green-500 text-white px-3 py-1 rounded-full text-sm">South America</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-900 mb-2">Patagonia</h3>
                        <p class="text-gray-600 mb-4">Explore the untamed wilderness at the end of the world, with glaciers, peaks, and pristine nature.</p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">6 guides available</span>
                            <a href="#" class="text-primary hover:text-secondary font-semibold">Explore →</a>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Load More Button -->
            <div class="text-center mt-12">
                <button class="bg-primary hover:bg-secondary text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200">
                    Load More Destinations
                </button>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="bg-gradient-to-r from-secondary to-primary text-white py-16">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h3 class="text-3xl font-bold mb-4">Never Miss a Destination</h3>
            <p class="text-xl mb-8">Get notified when we add new destination guides and travel inspiration.</p>
            <div class="max-w-md mx-auto">
                <div class="flex gap-3">
                    <input type="email" placeholder="Enter your email" class="flex-1 px-4 py-3 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-accent">
                    <button class="bg-accent hover:bg-yellow-500 text-white font-semibold px-6 py-3 rounded-lg transition-colors duration-200">
                        Subscribe
                    </button>
                </div>
            </div>
        </div>
    </section>

