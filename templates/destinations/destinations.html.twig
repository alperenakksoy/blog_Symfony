{% extends '/base.html.twig' %}

{% block title %}Destinations - Wanderlust{% endblock %}

{% block body %}
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-primary">Wanderlust</h1>
                </div>
                <div class="hidden md:block">
                    <div class="flex items-center space-x-8">
                        <a href="/" class="text-gray-700 hover:text-primary transition-colors duration-200">Home</a>
                        <a href="/destinations" class="text-primary font-semibold">Destinations</a>
                        <a href="/travel-tips" class="text-gray-700 hover:text-primary transition-colors duration-200">Travel Tips</a>
                        <a href="/about" class="text-gray-700 hover:text-primary transition-colors duration-200">About</a>
                        <a href="/contact" class="text-gray-700 hover:text-primary transition-colors duration-200">Contact</a>
                    </div>
                </div>
                <div class="hidden md:flex space-x-4 items-center">
                    <a href="/login" class="px-4 py-2 rounded-lg font-medium text-indigo-600 hover:text-white hover:bg-indigo-600 border-2 border-indigo-600 transition-all duration-300 hover:shadow-md">
                        Login
                    </a>
                    <a href="/register" class="px-4 py-2 rounded-lg font-medium text-white bg-indigo-600 hover:bg-indigo-700 transition-all duration-300 transform hover:scale-105 hover:shadow-lg">
                        Register
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-primary to-secondary text-white py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-5xl font-bold mb-6">Explore Amazing Destinations</h2>
                <p class="text-xl mb-8 max-w-3xl mx-auto">Discover breathtaking locations around the world, from hidden gems to iconic landmarks. Let our destination guides inspire your next adventure!</p>
            </div>
        </div>
    </section>

    <!-- Filter Section -->
    <section class="bg-white py-8 border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-wrap gap-4 justify-center">
                <button class="px-6 py-2 rounded-full bg-primary text-white font-medium">All Destinations</button>
                <button class="px-6 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors duration-200">Europe</button>
                <button class="px-6 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors duration-200">Asia</button>
                <button class="px-6 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors duration-200">Americas</button>
                <button class="px-6 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors duration-200">Africa</button>
                <button class="px-6 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors duration-200">Oceania</button>
            </div>
        </div>
    </section>

    <!-- Destinations Grid -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">

                <!-- Destination 1 -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
                    <div class="relative">
                        <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Norway" class="w-full h-64 object-cover">
                        <div class="absolute top-4 left-4">
                            <span class="bg-primary text-white px-3 py-1 rounded-full text-sm">Europe</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-900 mb-2">Norway</h3>
                        <p class="text-gray-600 mb-4">Experience the dramatic fjords, Northern Lights, and charming Nordic culture in this Scandinavian paradise.</p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">12 guides available</span>
                            <a href="#" class="text-primary hover:text-secondary font-semibold">Explore →</a>
                        </div>
                    </div>
                </div>

                <!-- Destination 2 -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
                    <div class="relative">
                        <img src="https://images.unsplash.com/photo-1544735716-392fe2489ffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Thailand" class="w-full h-64 object-cover">
                        <div class="absolute top-4 left-4">
                            <span class="bg-yellow-500 text-white px-3 py-1 rounded-full text-sm">Asia</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-900 mb-2">Thailand</h3>
                        <p class="text-gray-600 mb-4">Discover ancient temples, pristine beaches, and vibrant street food culture in the Land of Smiles.</p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">18 guides available</span>
                            <a href="#" class="text-primary hover:text-secondary font-semibold">Explore →</a>
                        </div>
                    </div>
                </div>

                <!-- Destination 3 -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
                    <div class="relative">
                        <img src="https://images.unsplash.com/photo-1469474968028-56623f02e42e?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Peru" class="w-full h-64 object-cover">
                        <div class="absolute top-4 left-4">
                            <span class="bg-green-500 text-white px-3 py-1 rounded-full text-sm">South America</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-900 mb-2">Peru</h3>
                        <p class="text-gray-600 mb-4">Trek to Machu Picchu, explore ancient Incan ruins, and experience the rich culture of the Andes.</p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">8 guides available</span>
                            <a href="#" class="text-primary hover:text-secondary font-semibold">Explore →</a>
                        </div>
                    </div>
                </div>

                <!-- Destination 4 -->
